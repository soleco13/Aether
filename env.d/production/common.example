# Production Environment Variables for Aether Docs
# СКОПИРУЙТЕ ЭТОТ ФАЙЛ В common И ЗАМЕНИТЕ ВСЕ ЗНАЧЕНИЯ!

# Django секретный ключ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
# Сгенерируйте новый: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=ЗАМЕНИТЕ_НА_СГЕНЕРИРОВАННЫЙ_СЕКРЕТНЫЙ_КЛЮЧ

# База данных PostgreSQL
# Используйте сильный пароль для продакшена
POSTGRES_PASSWORD=ЗАМЕНИТЕ_НА_БЕЗОПАСНЫЙ_ПАРОЛЬ_БД

# Keycloak Admin пароль
# Используйте сильный пароль для админки
KEYCLOAK_ADMIN_PASSWORD=ЗАМЕНИТЕ_НА_ПАРОЛЬ_АДМИНА_KEYCLOAK

# Django Configuration
DJANGO_CONFIGURATION=Production
DJANGO_SETTINGS_MODULE=impress.settings

# Database
DB_HOST=postgresql
DB_NAME=impress
DB_USER=impress
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/1
REDIS_SESSION_URL=redis://redis:6379/2

# Security Settings
ALLOWED_HOSTS=aethers.ru,aetherhelp.store,45.146.166.126,localhost
CSRF_TRUSTED_ORIGINS=https://aethers.ru,https://aetherhelp.store
CORS_ALLOWED_ORIGINS=https://aethers.ru,https://aetherhelp.store
CORS_ALLOW_ALL_ORIGINS=false

# SSL/Security
SECURE_SSL_REDIRECT=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_DOMAIN=.aethers.ru

# Frontend URLs
NEXT_PUBLIC_API_ORIGIN=https://aethers.ru
API_ORIGIN=https://aethers.ru

# Keycloak Settings
KC_HOSTNAME=aethers.ru
KC_HOSTNAME_STRICT=false
KC_HTTP_ENABLED=false
KC_PROXY=edge

# Email settings (настройте для вашего SMTP)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_email_password

# Celery (если используется)
# CELERY_BROKER_URL=redis://redis:6379/0

# Debug (ВСЕГДА false в продакшене!)
DEBUG=false

# Media and Static files
MEDIA_URL=/media/
STATIC_URL=/static/

# Локализация
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow
USE_I18N=true
USE_L10N=true
USE_TZ=true

# Логирование
LOG_LEVEL=INFO

# OIDC Configuration для Keycloak
OIDC_RP_CLIENT_ID=impress
# Получите секрет клиента из Keycloak админки
OIDC_RP_CLIENT_SECRET=ЗАМЕНИТЕ_НА_СЕКРЕТ_КЛИЕНТА_KEYCLOAK
OIDC_OP_JWKS_ENDPOINT=https://aethers.ru/auth/realms/aether/protocol/openid_connect/certs
OIDC_OP_AUTHORIZATION_ENDPOINT=https://aethers.ru/auth/realms/aether/protocol/openid_connect/auth
OIDC_OP_TOKEN_ENDPOINT=https://aethers.ru/auth/realms/aether/protocol/openid_connect/token
OIDC_OP_USER_ENDPOINT=https://aethers.ru/auth/realms/aether/protocol/openid_connect/userinfo
OIDC_OP_LOGOUT_ENDPOINT=https://aethers.ru/auth/realms/aether/protocol/openid_connect/logout
OIDC_REDIRECT_REQUIRE_HTTPS=true
OIDC_REDIRECT_ALLOWED_HOSTS=aethers.ru,aetherhelp.store
LOGIN_REDIRECT_URL=https://aethers.ru/
LOGIN_REDIRECT_URL_FAILURE=https://aethers.ru/auth/login/
LOGOUT_REDIRECT_URL=https://aethers.ru/ 